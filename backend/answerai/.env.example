# Email Verification Configuration
# Enable email verification for new user signups
EMAIL_VERIFICATION_ENABLED=false

# SMTP Configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=AnswerAI
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Email verification URL (frontend URL where users will verify their email)
# This should point to your frontend verification page
# Example: http://localhost:8080/auth/verify or https://yourdomain.com/auth/verify
EMAIL_VERIFICATION_URL=http://localhost:8080/auth/verify

# Token expiry time in seconds (default: 86400 = 24 hours)
EMAIL_VERIFICATION_TOKEN_EXPIRY=86400
